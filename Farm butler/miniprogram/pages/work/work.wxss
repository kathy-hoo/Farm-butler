/* pages/work/work.wxss */
page {
  background-color: #ecf3ed;
}
.weui-tab__content{
  width:100%;
  margin-top:20rpx;
}
.weui-navbar {
  display: flex;
  justify-content: space-around;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #CCCCCC;
}
.weui-navbar__item {
  position: relative;
  padding: 25rpx 0;
  text-align: center;
  font-size: 0;
  color:  #000;
  width:20%;
}
.weui-bar__item_on{
  transition: all 0.3s;
  border-bottom: 5rpx solid #2dc435;
  color: #2dc435;
}
.weui-navbar__title {
  font-size: 30rpx;
}
.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
}
.float{
  position: fixed;
  top:900rpx;
  left:550rpx;
}
.add{
  width:110rpx;
  height:110rpx;
  border-radius: 55rpx;
  box-shadow: 10rpx 10rpx 15rpx rgb(185, 197, 190);
}
.header{
  width:100%;
  background-color: #fff;
  height:20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.bottom{
  width:100%;
  background-color: #fff;
  height:20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.content{
  background-color: #fff;
  margin-top:3rpx;
  height:150rpx;
  padding-left:10rpx;
  display: flex;
  flex-direction: row;
}
.picture{
  width:120rpx;
  height:120rpx;
  padding:10rpx;
}
.img{
  width:100rpx;
  height:100rpx;
  border:1rpx solid #2dc435;
  border-radius:50rpx;
}
.word{
  width:80%;
  height:170rpx;
}
.top{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction: row;
  font-size: 30rpx;
}
.left{
  width:40%;
  height:100rpx;
}
.right{
  width:60%;
  height:100rpx;
}
.item{
  height:50rpx;
  display: flex;
  align-items: center;
}
.bottom{
  width:100rpx;
  height:50rpx;
  margin-top:5rpx;
  margin-left:460rpx;
  display:flex;
  flex-direction: row;
}
.delete{
  width:100rpx;
  height:40rpx;
  margin-left: 20rpx;
}
.icon{
  width:40rpx;
  height:40rpx;
}

