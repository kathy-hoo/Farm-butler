/* pages/farm/farm.wxss */
page{
  background-color: #ecf3ed;
}
.slide-image{
  width:100%;
  border-bottom-left-radius:20rpx;
  border-bottom-right-radius:20rpx;
}
.float{
  position: fixed;
  top:900rpx;
  left:550rpx;
}
.add{
  width:110rpx;
  height:110rpx;
  border-radius: 55rpx;
  box-shadow: 10rpx 10rpx 15rpx rgb(185, 197, 190);
}
.myfarm{
  width:100%;
  margin-top: 20rpx;
}
.farm_title{
  background-color: #fff;
  height:80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2dc435;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.field_detail{
  background-color: #fff;
  margin-top:3rpx;
  height:100rpx;
  padding-left:10rpx;
  display: flex;
  flex-direction: row;
}
.image{
  width:100rpx;
  height:100rpx;
  padding:10rpx;
}
.picture{
  width:80rpx;
  height:80rpx;
  border:1rpx solid #2dc435;
  border-radius:40rpx;
}
.field_name{
  display: flex;
  align-items: center;
  font-size: 35rpx;
  width: 100rpx;
}
.change{
  width:40rpx;
  height:40rpx;
  margin-top:30rpx;
}
.icon{
  width:40rpx;
  height:40rpx;
}
.delete{
  width:40rpx;
  height:40rpx;
  margin-top:30rpx;
  margin-left:25rpx;
}
.plant{
  font-size:35rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  width:350rpx;
}
.field_none{
  background-color: #fff;
  color:#7a817b;
  margin-top:3rpx;
  height:100rpx;
  padding-left:10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.list_bottom{
  background-color: #fff;
  height:40rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}