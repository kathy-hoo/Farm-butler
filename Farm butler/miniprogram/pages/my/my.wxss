/* pages/my/my.wxss */
page{
  background-color: #ecf3ed;
}
.my_bg{
  position: fixed;
  top: 0;
  left: -10%;
  width: 120%;
  height: 200px;
  background: #2dc435;
  border-radius: 0 0 1000% 1000%;
}
.my_header{
  position: absolute;
  width:100%;
  display: flex;
  justify-content: center;
  background: firebrick
}
.userinfo {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background: olive */
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.userinfo-nickname {
  color: #fff;
}
.my_body{
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  padding: 0 50px;
  height: auto;
  top: 150px;
  /* background: darkcyan */
}
.my_content{
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  border-radius: 10px;
  box-shadow: #cdcdcd .5px .5px 3px;
  margin-bottom: 30px;
  padding: 30px 20px;
}
.content_line{
  display:flex;
  flex-wrap:nowrap;
  align-items: center;
  height: 50px;
}
.content_label{
  width: 22px;
  height: 22px;
  margin-right: 8px;
}
.content_title{
  font-size: 15px;
  flex: 1 0 45%;
  color: #515151;
}
.content_arrow{
  width: 20px;
  height: 20px;
}
